<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<!-- ============================================================= -->
<!-- 마이바티스 환경설정파일 -->
<!-- 매퍼파일의 위치정보 설정 -->
<!-- ============================================================= -->
<configuration>	
	<!-- 자바빈 별칭:매퍼파일에서 환경설정 파일로 위치됨. -->
	<typeAliases>
		<typeAlias alias="MemberDto" type="model.MemberDto"/>
		<typeAlias alias="LocationsDto" type="model.LocationsDto"/>
		<typeAlias alias="RoomDto" type="model.RoomDto"/>
		<typeAlias alias="DetailDto" type="model.DetailDto"/>
		<typeAlias alias="SearchDto" type="model.SearchDto"/>
		<typeAlias alias="BuildingOptionDto" type="model.BuildingOptionDto"/>
		<typeAlias alias="BuildingOptionListDto" type="model.BuildingOptionListDto"/>		
		<typeAlias alias="RoomTypesDto" type="model.RoomTypesDto"/>		
		<typeAlias alias="MembershipDto" type="model.MembershipDto"/>
	</typeAliases>
	 
	<!-- 매퍼파일(SQL쿼리 결과와 자바빈 매핑) 정보 설정 -->
	<mappers>
		<mapper resource="mybatis/Member_myBatis.xml"/>
		<mapper resource="mybatis/Locations_myBatis.xml"/>
		<mapper resource="mybatis/Room_myBatis.xml"/>
		<mapper resource="mybatis/Search_myBatis.xml"/>
		<mapper resource="mybatis/PLogin_myBatis.xml"/>
	</mappers>
	
</configuration>